package com.operation.select;

import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.JScrollPane;
import javax.swing.JTable;
import javax.swing.JTextField;
import javax.swing.table.DefaultTableModel;

import com.operation.myComponent.BackPane;

public class SelectAnesthetist extends BackPane {
	private SelectAnesthetistListener listener;
	private BackPane panel_canesthetist;
	private JButton button_search;
	private JTextField textField_name;
	private JButton button_save;

	public SelectAnesthetist() {
		listener = new SelectAnesthetistListener();
		System.out.println("进入麻醉师选择界面");
		initialize();
	}
	
	class SelectAnesthetistListener implements ActionListener {//定义监听器类
		@Override
		public void actionPerformed(ActionEvent a) {
			if(a.getActionCommand().equals("button_save")) {//监听器监听到button_select_nurse按扭按下会执行下面的代码
				System.out.println("点击了麻醉师选择保存按扭");
				//录入并保存信息
				JOptionPane.showMessageDialog(null, "保存成功");
				//返回之前界面
				
			}else if(a.getActionCommand().equals("button_search")) {
				System.out.println("点击了搜索按扭");
			}
		}
	}
	
	private void initialize() {
		this.setLayout(null);	
		
		panel_canesthetist = new BackPane();
		panel_canesthetist.setBounds(10, 10, 580, 510);
		this.add(panel_canesthetist);
		panel_canesthetist.setLayout(null);
		panel_canesthetist.setVisible(true);
		
		JLabel label_title = new JLabel("麻醉师选择");
		label_title.setFont(new Font("宋体", Font.PLAIN, 16));
		label_title.setBounds(126, 10, 109, 15);
		panel_canesthetist.add(label_title);
		
		JLabel label = new JLabel("姓名：");
		label.setFont(new Font("宋体", Font.PLAIN, 15));
		label.setBounds(60, 38, 61, 15);
		panel_canesthetist.add(label);
		
		textField_name = new JTextField();
		textField_name.setColumns(10);
		textField_name.setBounds(104, 35, 109, 21);
		panel_canesthetist.add(textField_name);
		
		button_search = new JButton("搜索");
		button_search.setBounds(223, 34, 70, 23);
		panel_canesthetist.add(button_search);
		button_search.setActionCommand("button_search");
		button_search.addActionListener(listener);
		
		JTable table = new JTable(new DefaultTableModel(
				new Object[][] {
						{new Integer(1), new Integer(2), new Integer(3), new Integer(4)},
						{new Integer(4), new Integer(3), new Integer(2), new Integer(1)},
						},
						new String[] {
						"姓名", "性别", "年龄", "信息"
						}
				));
		JScrollPane scrollPane_info_anesthetist = new JScrollPane(table);
		scrollPane_info_anesthetist.setBounds(60, 67, 460, 198);
		panel_canesthetist.add(scrollPane_info_anesthetist);
		//信息显示
		
		
		
		
		button_save = new JButton("保存");
		button_save.setBounds(142, 330, 93, 23);
		panel_canesthetist.add(button_save);
		button_save.setActionCommand("button_save");
		button_save.addActionListener(listener);
		
	}
}
