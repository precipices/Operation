package com.operation.client;

import java.awt.Dimension;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JTextField;

import com.operation.myComponent.BackPane;
import com.operation.myComponent.BackScrollPane;
/**
 * 1.把这个类设置成BackPane方便整合,JFrame无法整合
 * 2.请在MainFrame.java里运行
 */
public class Operation extends BackPane{
	private BackPane panel_ocenter;
	private BackScrollPane JSP_center;
	private OperationListener listener;
	private JButton button_new_appoint;
	//private JTable table;
	
	private JTextField textField_pname;
	private JTextField textField_type;
	private JTextField textField_date;
	private JTextField textField_no;
		
	public Operation() {
		listener = new OperationListener();
		initialize();
	}
	
	class OperationListener implements ActionListener {//定义监听器类
		@Override
		public void actionPerformed(ActionEvent a) {
			if(a.getActionCommand().equals("button_new_appoint")) {
				System.out.println("点击了新建预约手术按扭");
				remove(panel_ocenter);//将原来的面板移除
				remove(JSP_center);
				panel_ocenter = new Appoint();
				panel_ocenter.setBounds(0, 0, 580, 500);
				add(panel_ocenter);
				validate();
				repaint();
			}/*else if(a.getActionCommand().equals("button_select_nurse")) {
				System.out.println("点击了护士选择按扭");
				
			}else if(a.getActionCommand().equals("button_select_anesthetist")) {
				System.out.println("点击了麻醉师选择按扭");
				
			}*/
		}
	}
	
	
	//@SuppressWarnings("serial")
	private void initialize() {
		this.setLayout(null);	
		
		panel_ocenter = new BackPane();
		panel_ocenter.setBounds(0, 0, 750, 450);
		this.add(panel_ocenter);
		panel_ocenter.setLayout(null);
		panel_ocenter.setVisible(true);
		
		JLabel label_title = new JLabel("手术");
		label_title.setFont(new Font("宋体", Font.PLAIN, 17));
		label_title.setBounds(100, 10, 109, 26);
		panel_ocenter.add(label_title);
		
		JSP_center = new BackScrollPane(panel_ocenter);
		JSP_center.setBounds(0, 0, 700, 500);
		panel_ocenter.setPreferredSize(new Dimension(700, 500));
		this.add(JSP_center);
		panel_ocenter.revalidate();
		this.setVisible(true);
		
		button_new_appoint = new JButton("新建预约手术");
		button_new_appoint.setBounds(27, 46, 131, 23);
		panel_ocenter.add(button_new_appoint);
		button_new_appoint.setActionCommand("button_new_appoint");
		button_new_appoint.addActionListener(listener);
		
		JLabel label_have_operation = new JLabel("已有手术安排：");
		label_have_operation.setFont(new Font("宋体", Font.PLAIN, 15));
		label_have_operation.setBounds(27, 79, 136, 22);
		panel_ocenter.add(label_have_operation);
		
		
		BackPane panel_info_1 = new BackPane();
		panel_info_1.setBounds(27, 111, 550, 70);
		panel_ocenter.add(panel_info_1);
		panel_info_1.setLayout(null);
		panel_info_1.setVisible(true);
		
		JButton button_info_1 = new JButton("编辑");
		button_info_1.setBounds(437, 10, 78, 23);
		panel_info_1.add(button_info_1);
		
		JButton button_info_2 = new JButton("删除");
		button_info_2.setBounds(437, 37, 78, 23);
		panel_info_1.add(button_info_2);
		
		JLabel label = new JLabel("手术");
		label.setFont(new Font("宋体", Font.PLAIN, 14));
		label.setBounds(10, 10, 57, 23);
		panel_info_1.add(label);
		
		textField_no = new JTextField();//放手术编号用以标识
		textField_no.setBounds(48, 11, 78, 21);
		panel_info_1.add(textField_no);
		textField_no.setColumns(10);
		
		JLabel label_pname = new JLabel("病人：");
		label_pname.setBounds(10, 41, 54, 15);
		panel_info_1.add(label_pname);
		
		textField_pname = new JTextField();
		textField_pname.setBounds(48, 38, 78, 21);
		panel_info_1.add(textField_pname);
		textField_pname.setColumns(10);
		
		JLabel label_type = new JLabel("手术类型：");
		label_type.setBounds(148, 15, 78, 15);
		panel_info_1.add(label_type);
		
		textField_type = new JTextField();
		textField_type.setColumns(10);
		textField_type.setBounds(211, 12, 193, 21);
		panel_info_1.add(textField_type);
		
		JLabel label_date = new JLabel("手术日期：");
		label_date.setBounds(148, 42, 66, 15);
		panel_info_1.add(label_date);
		
		textField_date = new JTextField();
		textField_date.setColumns(10);
		textField_date.setBounds(211, 38, 193, 21);
		panel_info_1.add(textField_date);
		
		}
}
