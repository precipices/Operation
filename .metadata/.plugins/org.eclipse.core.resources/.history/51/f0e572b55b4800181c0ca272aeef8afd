package com.operation.myComponent;

import java.awt.GraphicsConfiguration;
import java.awt.HeadlessException;

import javax.swing.JFrame;

public class MyFrame extends JFrame {

	private void init() {
		this.setUndecorated(true);
	}
	private void setTitleLabel() {
		
	}
	

	public void setBgPic(String picName) {
		this.setContentPane(new PicBackPane(picName));
	}

	public MyFrame() throws HeadlessException {
		super();
		this.init();
	}

	public MyFrame(GraphicsConfiguration arg0) {
		super(arg0);
		this.init();
	}

	public MyFrame(String arg0, GraphicsConfiguration arg1) {
		super(arg0, arg1);
		this.init();
	}

	public MyFrame(String arg0) throws HeadlessException {
		super(arg0);
		this.init();
	}

	public static void main(String[] args) {
		MyFrame f = new MyFrame();
		f.setBgPic("./imgs/bg.jpg");
		f.setSize(800, 600);
		f.setLocationByPlatform(true);
		f.setVisible(true);
	}
}
