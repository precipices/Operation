package com.operation.myComponent;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.GraphicsConfiguration;
import java.awt.HeadlessException;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class MyFrame extends JFrame {

	PicBackPane contentPane=null;
	private void init(String picURL) {
		this.setUndecorated(true);
		contentPane=new PicBackPane(picURL);
		JPanel p=createTitlePane();
		contentPane.add(p, BorderLayout.NORTH);
		this.setContentPane(new PicBackPane(picURL));
	}
	private JPanel createTitlePane() {
		JPanel p=new JPanel();
		p.setBackground(Color.red);
		p.setPreferredSize(new Dimension(this.getWidth(),30));
		return p;
	}
	

	public MyFrame(String title,String picURL) {
		super(title);
		this.init(picURL);
	}

	public static void main(String[] args) {
		MyFrame f = new MyFrame("","./imgs/bg.jpg");
		f.setSize(800, 600);
		f.setLocationByPlatform(true);
		f.setVisible(true);
	}
}
