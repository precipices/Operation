package com.pss.GUI;

import java.awt.Graphics;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JSplitPane;

public class MyControlChartPanel extends JSplitPane{
	JScrollPane leftPanel = null;
	MyChartPanels rightPanel = null;

	public MyControlChartPanel() {
		rightPanel = new MyChartPanels();
		leftPanel = new JScrollPane(new ChartSelectPanel(rightPanel));
		this.setLeftComponent(leftPanel);
		this.setRightComponent(rightPanel);
		this.setDividerLocation(200);
		this.setDividerSize(1);
	}


	public static void main(String[] args) {
		MyControlChartPanel p = new MyControlChartPanel();
		JFrame f = new JFrame();
		f.add(p);
		f.setBounds(200, 100, 800, 600);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.setVisible(true);
		f.repaint();
	}
}
