package com.operation.select;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JScrollPane;

import com.operation.myComponent.BackPane;
import com.operation.myComponent.BackFrame;

public class LeftPane extends BackPane {
	private static String[] names = { "", "第二食堂", "第三食堂", "第四食堂", "第五食堂", "校园超市1", "校园超市2", "校园超市3", "体育馆1", "体育馆2",
			"体育馆3", "操场1", "操场2", "操场3"};
	private JLabel jl1;
	private ActionListener listener = new ControlListener();

	JPanel controlPanel;
	public LeftPane(JPanel controlPanel) {
		this.controlPanel=controlPanel;
		initGUI();
	}
	private void initGUI() {
		
	}

	class ControlListener implements ActionListener {

		@Override
		public void actionPerformed(ActionEvent e) {
			
		}

	}

	public static void main(String[] args) {
		JFrame f =new BackFrame("test","./imgs/bg2.jpg");
		JScrollPane jsp = new JScrollPane(new LeftPane(null));
		jsp.getVerticalScrollBar().setUnitIncrement(20);
		jsp.setWheelScrollingEnabled(true);
		f.add(jsp);
		// 设置大小和显示类型
		f.setBounds(200, 100, 800, 600);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.setVisible(true);
	}
